<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Solix">

        <activity android:name=".ui.barcodeReader.BarcodeReaderScreen"
            android:exported="true"
            android:parentActivityName=".ui.newCounter.NewCounterScreen"
            android:theme="@style/Theme.Solix" />

        <activity android:name=".ui.newCounter.NewCounterScreen"
            android:parentActivityName=".ui.counter.CounterScreen"/>

        <activity android:name=".ui.counter.CounterScreen"
            android:parentActivityName=".ui.home.HomeScreen"/>

        <activity android:name=".ui.map.MapScreen"
            android:parentActivityName=".ui.home.HomeScreen"/>

        <activity android:name=".ui.sync.SyncScreen"
            android:parentActivityName=".ui.home.HomeScreen"/>

        <activity
            android:name=".ui.customerManipulator.CustomerManipulatorScreen"
            android:parentActivityName=".ui.customers.CustomersScreen" />

        <activity
            android:name=".ui.customers.CustomersScreen"
            android:parentActivityName=".ui.home.HomeScreen" />

        <activity
            android:name=".ui.paymentManipulator.PaymentManipulatorScreen"
            android:exported="true"
            android:parentActivityName=".ui.payments.PaymentsScreen"
            android:theme="@style/Theme.Solix" />

        <activity
            android:name=".ui.payments.PaymentsScreen"
            android:exported="true"
            android:parentActivityName=".ui.home.HomeScreen"
            android:theme="@style/Theme.Solix" />

        <activity
            android:name=".ui.home.HomeScreen"
            android:exported="true"
            android:theme="@style/Theme.Solix" />

        <activity
            android:name=".ui.signUp.SignUpScreen"
            android:exported="true"
            android:theme="@style/Theme.Solix" />

        <activity
            android:name=".ui.login.LoginScreen"
            android:exported="true"
            android:theme="@style/Theme.Solix">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>